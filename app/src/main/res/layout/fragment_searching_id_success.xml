<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/searching_id_success_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력하신 정보와 일치하는 아이디입니다."
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp"/>
        <TextView
            android:id="@+id/searching_id_success_result_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E4E3DB"
            android:text="id"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="137dp"
            android:layout_marginEnd="137dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/searching_id_success_inform_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_result_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15dp"
            android:hint="0000.00.00 가입"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>