<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/searching_id_success_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="입력하신 정보와 일치하는 아이디입니다."
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp"/>
        <TextView
            android:id="@+id/searching_id_success_result_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_layout"
            android:text="id"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="137dp"
            android:layout_marginEnd="137dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/searching_id_success_inform_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_result_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15dp"
            android:hint="0000.00.00 가입"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_pw_btn"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="76dp"
            android:layout_marginStart="22dp"
            android:text="비밀번호 찾기"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/point_color"
            android:background="@drawable/search_pw_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/check_btn"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_inform_tv"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_btn"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="76dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="22dp"
            android:text="확인"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/point_btn_active_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_pw_btn"
            app:layout_constraintTop_toBottomOf="@id/searching_id_success_inform_tv"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>