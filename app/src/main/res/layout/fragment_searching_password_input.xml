<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Auth.SearchingPasswordInputFragment"
    android:background="#F0EFEA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/searching_pw_certi_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="본인인증"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="51dp"/>
        <TextView
            android:id="@+id/searching_pw_certi_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintStart_toStartOf="@id/searching_pw_certi_title_tv"
            android:text="아이디"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="48dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_certi_id_te"
            android:background="@drawable/setting_layout"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="19dp"
            android:paddingStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintStart_toEndOf="@id/searching_pw_certi_id_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="아이디 입력"
            android:textSize="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="17dp"/>
        <TextView
            android:id="@+id/searching_pw_certi_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"

            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_id_tv"
            android:layout_marginTop="35dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_certi_name_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:background="@drawable/setting_layout"
            android:paddingStart="15dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintStart_toEndOf="@id/searching_pw_certi_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_id_tv"
            android:layout_marginStart="29dp"
            android:layout_marginTop="22dp"
            android:hint="가입 시 사용한 이름 입력"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/searching_pw_certi_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="이메일"

            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_name_tv"
            android:layout_marginTop="34dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_pw_certi_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증전송"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/login_btn_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_name_tv"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="19dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_certi_email_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:hint="본인 명의의 이메일"
            android:textSize="15dp"
            android:paddingStart="15dp"
            android:background="@drawable/setting_layout"
            app:layout_constraintTop_toTopOf="@id/searching_pw_certi_email_tv"
            app:layout_constraintBottom_toBottomOf="@id/searching_pw_certi_email_tv"
            app:layout_constraintStart_toEndOf="@id/searching_pw_certi_email_tv"
            app:layout_constraintEnd_toStartOf="@id/searching_pw_certi_email_btn"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="7dp"/>
        <TextView
            android:id="@+id/searching_pw_certi_certi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_email_tv"
            android:layout_marginTop="36dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_pw_certi_certi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_email_tv"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="19dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_certi_certi_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:paddingStart="15dp"
            android:background="@drawable/setting_layout"
            app:layout_constraintStart_toEndOf="@id/searching_pw_certi_title_tv"
            app:layout_constraintTop_toTopOf="@id/searching_pw_certi_certi_tv"
            app:layout_constraintBottom_toBottomOf="@id/searching_pw_certi_certi_tv"
            app:layout_constraintEnd_toStartOf="@id/searching_pw_certi_certi_btn"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:hint="인증번호 입력"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_pw_certi_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 재설정"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_layout"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_certi_certi_tv"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>