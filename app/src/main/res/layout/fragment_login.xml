<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.LoginFragment"
    android:id="@+id/login_fragment_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/loginfrag_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_title_small_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="184.59dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loginfrag_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diary_edit_text"
        android:paddingStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginfrag_title_iv"
        android:layout_marginTop="47.34dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:hint="아이디"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loginfrag_pw_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diary_edit_text"
        android:paddingStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginfrag_id_et"
        android:layout_marginTop="15dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:hint="비밀번호"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginfrag_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/login_btn_layout"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginfrag_pw_et" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginfrag_login_btn">

    <TextView
        android:id="@+id/loginfrag_searching_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="@color/half_black"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

<View
    android:id="@+id/bar1"
    android:layout_width="1dp"
    android:layout_height="0dp"
    android:background="@color/half_black"
    android:layout_marginStart="19.49dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    app:layout_constraintStart_toEndOf="@id/loginfrag_searching_id_tv"
    app:layout_constraintTop_toTopOf="@id/loginfrag_searching_id_tv"
    app:layout_constraintBottom_toBottomOf="@id/loginfrag_searching_id_tv"/>


    <TextView
        android:id="@+id/loginfrag_searching_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/half_black"
        android:layout_marginStart="20.17dp"
        app:layout_constraintStart_toEndOf="@id/bar1"
        app:layout_constraintTop_toTopOf="@id/loginfrag_searching_id_tv"/>

    <View
        android:id="@+id/bar2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/half_black"
        android:layout_marginStart="19.49dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toEndOf="@id/loginfrag_searching_pw_tv"
        app:layout_constraintTop_toTopOf="@id/loginfrag_searching_id_tv"
        app:layout_constraintBottom_toBottomOf="@id/loginfrag_searching_id_tv"/>


    <TextView
        android:id="@+id/loginfrag_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginStart="18.23dp"
        android:textColor="@color/half_black"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toEndOf="@id/bar2"
        app:layout_constraintTop_toTopOf="@id/loginfrag_searching_id_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>