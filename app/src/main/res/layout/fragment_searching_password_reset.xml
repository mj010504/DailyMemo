<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Auth.SearchingPasswordResetFragment"
    android:background="#F0EFEA">


    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_ic"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20.59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/searching_pw_reset_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 재설정"
            android:textSize="20sp"
            android:fontFamily="@font/title_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18.59dp"/>
        <TextView
            android:id="@+id/searching_pw_reset_warn_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로 사용할 \n비밀번호를 입력해주세요."
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_title_tv"
            android:layout_marginTop="152dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/searching_pw_reset_newpw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_warn_tv"
            android:text="비밀번호\n입력"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginStart="27dp"
            android:layout_marginTop="63dp"
            android:textSize="15dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_reset_newpw_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:paddingStart="14dp"
            android:background="@drawable/setting_layout"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_warn_tv"
            app:layout_constraintStart_toEndOf="@id/searching_pw_reset_newpw_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="59dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="19dp"
            android:hint="새 비밀번호 입력"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/searching_pw_reset_repw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호\n확인"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_newpw_tv"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="@id/searching_pw_reset_newpw_tv"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_reset_repw_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_newpw_tv"
            app:layout_constraintStart_toEndOf="@id/searching_pw_reset_repw_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="19dp"
            android:paddingStart="14dp"
            android:background="@drawable/setting_layout"
            android:hint="새 비밀번호 입력 확인"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_pw_reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_reset_repw_tv"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="23dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
