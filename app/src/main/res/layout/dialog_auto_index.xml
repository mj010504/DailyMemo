<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="488dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_dialog_layout">

    <ImageView
        android:id="@+id/title_tv"
        android:layout_width="98dp"
        android:layout_height="42dp"
        android:src="@drawable/auto_index_text"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더욱 편하게 일기를 남겨보세요! 심지어 자동입니다."
        android:textColor="@color/half_black"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 색인 기능은 인공지능으로 사진을 인식한 뒤,\n스트림 키워드 별로 자동으로 정리해주는 기능입니다.\n\n이제는 완전 자동입니다!\n\n\n\n가격 :5500￦"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/sub_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancle_btn"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:text="취소"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/cancle"
        android:background="@drawable/cancle_button_layout"
        android:layout_marginTop="72dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buy_btn"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:text="구매"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_layout"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/cancle_btn"
        app:layout_constraintStart_toEndOf="@id/cancle_btn"/>




</androidx.constraintlayout.widget.ConstraintLayout>