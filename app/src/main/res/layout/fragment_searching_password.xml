<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    tools:context=".Auth.SearchingPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/searching_pw_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 찾고자하는\n아이디를 입력해주세요."
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="144dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/searching_pw_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_title_tv"
            android:text="아이디"
            android:textSize="15dp"
            android:layout_marginTop="91dp"
            android:layout_marginStart="21dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_pw_id_te"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:background="@drawable/setting_layout"
            android:hint="아이디 입력"
            android:paddingStart="15dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintStart_toEndOf="@id/searching_pw_id_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_title_tv"
            android:layout_marginTop="79dp"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_pw_id_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_pw_id_tv"
            android:layout_marginTop="35dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:textSize="20dp"
            android:text="확인"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>