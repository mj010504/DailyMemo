<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Auth.SearchingIdFragment"
    android:background="#F0EFEA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/searching_id_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:layout_marginTop="168dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_id_name_te"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toEndOf="@id/searching_id_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="가입시 사용한 이름 입력"
            android:textSize="15sp"
            android:layout_marginTop="155dp"
            android:layout_marginStart="29dp"/>
        <TextView
            android:id="@+id/searching_id_telephone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:textSize="15sp"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@id/searching_id_name_tv"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_id_telephone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_id_name_tv"
            android:layout_marginTop="22dp"
            android:text="인증번호"
            android:background="#FF9900"
            android:textColor="@color/white"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_id_telephone_te"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="휴대전화 번호 입력(-제외)"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/searching_id_telephone_tv"
            app:layout_constraintEnd_toStartOf="@id/searching_id_telephone_btn"
            app:layout_constraintTop_toBottomOf="@id/searching_id_name_tv"
            android:layout_marginTop="22dp"
            android:layout_marginStart="6dp"/>
        <TextView
            android:id="@+id/searching_id_certi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/searching_id_telephone_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_id_certi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="15sp"
            android:background="#FF9900"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searching_id_telephone_tv"
            android:layout_marginTop="23dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searching_id_certi_te"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="인증번호 입력"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/searching_id_certi_tv"
            app:layout_constraintTop_toBottomOf="@id/searching_id_telephone_tv"
            app:layout_constraintEnd_toStartOf="@id/searching_id_certi_btn"
            android:layout_marginTop="23dp"
            android:layout_marginStart="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>