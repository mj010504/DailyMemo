<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".splash.SplashFragment"
    android:background="@color/main_color">

    <View
        android:layout_width="93.5dp"
        android:layout_height="2dp"
        android:background="@color/sub_color"
        android:layout_marginTop="134.5dp"
        android:layout_marginStart="42.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="2dp"
        android:layout_height="111dp"
        android:background="@color/sub_color"
        android:layout_marginTop="120dp"
        android:layout_marginStart="106dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <FrameLayout
        android:id="@+id/splash_frameLayout"
        android:layout_width="307dp"
        android:layout_height="307dp"
        android:layout_marginEnd="78dp"
        android:layout_marginStart="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/sub_color"
            android:layout_marginStart="174dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/sub_color"
            android:layout_marginBottom="112dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="103dp"
            android:layout_height="2dp"
            android:background="@color/sub_color"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="145dp"
            android:layout_gravity="bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="2dp"
            android:layout_height="47dp"
            android:background="@color/sub_color"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="194dp"
            android:layout_gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/splash_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:layout_marginStart="108dp"
            android:src="@drawable/title_ic"
            android:elevation="5dp"
            />

        <ImageView
            android:id="@+id/splash_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.81dp"
            android:layout_marginEnd="12.62dp"
            android:layout_gravity="end"
            android:src="@drawable/title_icon"
            />

    </FrameLayout>

    <View
        android:layout_width="95.5dp"
        android:layout_height="2dp"
        android:background="@color/sub_color"
        android:layout_marginEnd="99dp"
        android:layout_marginTop="126.5dp"
        app:layout_constraintTop_toBottomOf="@id/splash_frameLayout"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>