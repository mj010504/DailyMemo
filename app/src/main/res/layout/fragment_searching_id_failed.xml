<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/searching_id_failed_mark_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/exclamation_mark"
            android:layout_marginTop="151dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/searching_id_failed_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력하신 정보로 가입된 아이디가 없습니다."
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/searching_id_failed_mark_iv"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searching_id_failed_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="#FF9900"
            app:layout_constraintTop_toBottomOf="@id/searching_id_failed_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>